eksctl create cluster   --name dev-cluster   --region us-east-1   --nodegroup-name dev-nodes   --node-type t2.medium   --nodes 2   --nodes-min 2   --nodes-max 2   --managed

eksctl delete nodegroup --cluster dev-cluster --nodegroup-name dev-nodes 

Cluster.yaml

apiVersion: eksctl.io/v1alpha5
kind: ClusterConfig

metadata:
  name: dev-cluster
  region: ap-south-1

managedNodeGroups:
  - name: dev-ng
    instanceType: t3.large
    desiredCapacity: 3
    minSize: 2
    maxSize: 5
    labels:
      role: worker
    tags:
      env: dev
    updateConfig:
      maxUnavailable: 1

----
eksctl upgrade nodegroup -f cluster.yaml
